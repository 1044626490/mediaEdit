{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "components": ["./src/components/*"],
            "pages": ["./src/pages/*"],
            "assets": ["./src/assets/*"],
            "services": ["./src/services/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}